# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.py]
indent_style = space
indent_size = 4

[*.bash]
[*.sh]
end_of_line = lf

[Makefile]
indent_style = tab